{
  "database": {
    "url": "sqlite:///example.db",
    "type": "sqlite",
    "connection": {
      "timeout": 30,
      "max_connections": 5
    },
    "pool": {
      "size": 5,
      "max_overflow": 0,
      "recycle_time": 3600
    },
    "enable_debug": false
  },
  "security": {
    "enable_validation": true,
    "max_file_size_mb": 10,
    "max_statements_per_file": 100,
    "allowed_file_extensions": [".sql"]
  },
  "logging": {
    "level": "INFO",
    "format": "TEXT",
    "enable_console": true,
    "enable_file": false,
    "log_file": null,
    "log_dir": null,
    "backup_count": 7
  },
  "app": {
    "max_file_size_mb": 10,
    "max_statements_per_file": 100,
    "enable_verbose_output": false,
    "enable_debug_mode": false
  }
}
